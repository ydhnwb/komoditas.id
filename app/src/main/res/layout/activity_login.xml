<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ydhnwb.comodity.LoginActivity">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="28dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/materialBlack"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat datang!"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/materialBlack"
                android:text="Anda perlu masuk untuk melanjutkan. Pastikan anda mempunyai akun google yang ditautkan dengan ponsel ini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </com.google.android.gms.common.SignInButton>

        <TextView
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorGrey"
            android:gravity="center"
            android:text="Dengan mengklik sign in, anda menyetujui kebijakan privasi"
            android:layout_marginTop="38dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
