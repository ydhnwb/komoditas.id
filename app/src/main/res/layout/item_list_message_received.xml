<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp">


    <LinearLayout
        android:layout_marginEnd="58dp"
        android:paddingStart="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="38dp"
            android:id="@+id/item_message_received_photo_profile"
            android:layout_height="38dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_message_received_display_name"
                android:layout_marginStart="8dp"
                android:layout_gravity="top"
                android:textSize="12sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rectangle_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/image_in_chat_bubble_receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="200dp"
                    android:maxWidth="200dp"/>
                <TextView
                    android:layout_below="@id/image_in_chat_bubble_receive"
                    android:id="@+id/item_message_received_message_body"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:id="@+id/item_message_received_tanggal_post"
                android:textSize="11sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>